<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digitalmenu.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DigitalMenu">
        <activity
            android:name=".activities.ReceiptActivity"
            android:exported="true"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.SubItemsActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.CartActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.CategoryDetailActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.EnterTableNOActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>